#include<iostream>
using namespace std;

int main() {
    
  int n;
  cin>>n;
  int i = 1;
  while(i<=n){ 
      
    int space=i-1;
    while (space){
      cout<<" ";
      space=space-1;
    }
    
    int no=n-i+1;
    while (no){
      cout<<i;
      no -=1;
    }
    cout<<endl;
    i+=1;
  }
return 0;
}

Output:
1111
 222
  33
   4
