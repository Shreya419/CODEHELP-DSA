#include<iostream>
using namespace std;
    
  int main() {
      
  int n;
  cin>>n;
  
  int i =1;
  while(i<=n){
      
      //space print
    int space=i-1;
    while (space){
      cout<<" ";
      space=space-1;
    }
    
    //star print
    int star=n-i+1;
    while (star){
        
      cout<<"*";
      star-=1;
    }
    cout<<endl;
    i+=1;
  }
return 0;
}

Output:
****
 ***
  **
   *
