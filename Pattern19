#include<iostream>
using namespace std;

int main(){
    int n;
    cin>> n;
    
    int i = 1;
    while (i <= n ){
        
        //space print kr lo
        int space = n - i;
        while(space){
            cout << " ";
            space -= 1;
        }
        
        //star print kr lo
        int j = 1;
        while(j <= i){
            cout<< "*";
            j += 1;
        }
        cout<< endl;
        i += 1;
    }
   
}
Output:
   *
  **
 ***
****
