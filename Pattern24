#include<iostream>
using namespace std;

 int main(){
     int n;
     cin>> n;
     
     int i = 1;
     while(i <= n){
         int count = i;
         
          int space= i -1;
         while(space){
             cout<< " ";
             space -= 1;
         }
         int j = 1;
         while (j <= n-i+1){
             
             cout<< count  ;
             count += 1;
             j = j + 1;
         }
    
         cout<< endl;
         i = i + 1;
     }
         return 0;
     }
Output:
1234
 234
  34
   4
