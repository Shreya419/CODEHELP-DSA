#include<iostream>
using namespace std;


int main(){
    int n;
    cout << "Enter the value of n: "<< endl;
    cin>> n;
    
    cout << "Printing the values from 1 to n:"<< endl;
    for(int i = 0; i <= n; i++){
        cout<< i << endl;
    }
}


OR
#include<iostream>
using namespace std;


int main(){
    int n;
    cout << "Enter the value of n: "<< endl;
    cin>> n;
    
    cout << "Printing the values from 1 to n:"<< endl;
    
    int i = 1;
    for(; ;){
        if (i <= n){
            cout << i << endl;
        }
        
        else {
            break;
        }
        i++;
    }
}

THREE CONDITIONS AT A TIME IN FOR LOOP:
for(int a = 0, b= 1, c= 2; a>=0 && b>= 1 && c>= 2; a--,b--,c--){
           cout << a " " << b << " " << c << " ";
         }

